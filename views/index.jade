extends layout

block title
  title= 'RCS Photography'

block content   
  link(rel='stylesheet', href='/css/album.css')

  div(class='container-fluid')
    div(class='page-header')
      h1 Albums
      
  div(class='container-fluid')
    div(class='row')
      - for (var i = 0; i < albums.length; i++) { 
        div(class='col-sm-3')
          div(class='thumbnail')
            img(src=albums[i].images[0].thumb)
            div(class='caption')
              h3 #{ albums[i].albumInfo.name }
      - } 